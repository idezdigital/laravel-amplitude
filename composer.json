{
    "name": "idez/amplitude",
    "description": "Amplitude simplest integration ever",
    "keywords": [
        "idez",
        "amplitude"
    ],
    "homepage": "https://github.com/idezdigital/laravel-amplitude",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pedro Santiago",
            "email": "pedro@idez.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Idez\\Amplitude\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Idez\\Amplitude\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Idez\\Amplitude\\AmplitudeServiceProvider"
            ]
        }
    }
}
